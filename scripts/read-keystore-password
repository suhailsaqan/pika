#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
ENCRYPTED_SIGNING_ENV="$ROOT/secrets/android-signing.env.age"
YUBIKEY_IDENTITY_FILE_DEFAULT="$HOME/configs/yubikeys/keys.txt"
YUBIKEY_IDENTITY_FILE="${PIKA_AGE_IDENTITY_FILE:-$YUBIKEY_IDENTITY_FILE_DEFAULT}"

if [ -n "${PIKA_KEYSTORE_PASSWORD:-}" ]; then
  printf '%s\n' "$PIKA_KEYSTORE_PASSWORD"
  exit 0
fi

if ! command -v age >/dev/null 2>&1; then
  echo "error: age is required (run inside nix develop)" >&2
  exit 1
fi

if [ ! -f "$ENCRYPTED_SIGNING_ENV" ]; then
  echo "error: missing encrypted signing env: $ENCRYPTED_SIGNING_ENV" >&2
  echo "hint: create it via ./scripts/init-release-secrets" >&2
  exit 1
fi

decrypt_to_stdout() {
  if [ -n "${AGE_SECRET_KEY:-}" ]; then
    local tmp_key="$ROOT/secrets/.age-key.tmp"
    trap 'rm -f "$tmp_key"' EXIT
    umask 077
    printf '%s\n' "$AGE_SECRET_KEY" >"$tmp_key"
    age -d -i "$tmp_key" "$ENCRYPTED_SIGNING_ENV"
    return 0
  fi
  if [ -f "$YUBIKEY_IDENTITY_FILE" ]; then
    age -d -i "$YUBIKEY_IDENTITY_FILE" "$ENCRYPTED_SIGNING_ENV"
    return 0
  fi
  echo "error: set AGE_SECRET_KEY or provide PIKA_AGE_IDENTITY_FILE (default: $YUBIKEY_IDENTITY_FILE_DEFAULT)" >&2
  exit 1
}

password="$(
  decrypt_to_stdout \
    | sed -n 's/^PIKA_KEYSTORE_PASSWORD=//p' \
    | head -n 1
)"

if [ -z "$password" ]; then
  echo "error: encrypted signing env is missing PIKA_KEYSTORE_PASSWORD" >&2
  exit 1
fi

printf '%s\n' "$password"
